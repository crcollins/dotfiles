#!/usr/bin/env bash

# Script specific state
FILE=$1
SAME_DAY=$2
shift 2

# Prevents newlines from getting removed
IFS=
edit () {
    (
        trap 'rm ~/tmp.$$' exit;
        $EDITOR ~/tmp.$$ > /dev/tty;
        cat ~/tmp.$$
    )
}

if [ -z "$1" ] ;
then
    text=$(edit)
elif [ "$1" == "read" ] ;
then
    less $FILE ;
    exit ;
else
    text="$1"
fi

DATE=$(date --iso-8601)
echo $DATE ${text//$'\n'/$'\n'         + } >> $FILE

# Only allow one date entry per day
if [ $SAME_DAY = true ] ;
then
    # Remove all date values after the first one
    sed -e "0,/^$DATE/! s/^$DATE/         +/" -i $FILE
fi
