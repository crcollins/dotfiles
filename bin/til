#!/usr/bin/env bash

# Prevents newlines from getting removed
IFS=
edit () {
    ( 
        trap 'rm ~/tmp.$$' exit;
        $EDITOR ~/tmp.$$ > /dev/tty;
        cat ~/tmp.$$
    )
}

if [ -z "$1" ] ;
then
    text=$(edit)
elif [ "$1" == "read" ] ;
then
    less ~/til.log ;
    exit ;
else
    text="$1"
fi

echo $(date --iso-8601) ${text//$'\n'/$'\n'         + } >> ~/til.log
